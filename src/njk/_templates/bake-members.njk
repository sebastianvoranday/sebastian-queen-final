{% extends '_templates/base.njk' %}
{% set relative_path = "../" %}
{% from '_macros/prose.njk' import prose %}

{% block page_title %}{{ headline }}{% endblock %}

{% block page_description %}{{ headline }} by Capt. Crit McGillicutty{% endblock %}

{% block content %}
  <article class="container">
    <div class="row">
      <div class="col-sm-4">
        <img src="{{ image }}" alt=" {{ name }} " class="img-fluid">
        <p class="byline"> {{ name }}<br>
        <span>Tenure: {{ tenure }}</span></p>
        <span>Instruments: {{ instruments }}</span></p>
        <span>Birthplace: {{ birthplace }}</span></p>
        <span>Birthdate: {{ birthdate }}</span></p>
        <hr class="d-sm-none">
      </div>
      <div class="col-sm-8">
        <img src="../img/{{ image }}" alt="" class="img-fluid mb-4">
        <h1>{{ headline }}</h1>
        {{ prose(post) }}
      </div>
    </div>
  </article>
{% endblock %}